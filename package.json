{
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "clear-dev-cache": "rm -rf node_modules/.cache/hard-source/",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .eslintignore client/",
    "format": "eslint --fix --ext .js,.vue,.ts --ignore-path .eslintignore client/",
    "test": "jest --coverage --passWithNoTests --coverageDirectory=coverage/jest",
    "test-watch": "jest --watchAll",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o dist_storybook"
  },
  "devDependencies": {
    "@nuxt/typescript": "^2.8.1",
    "@nuxt/typescript-build": "^0.3.4",
    "@nuxtjs/style-resources": "^0.1.2",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.1.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-vue": "^5.2.3",
    "jest": "^24.9.0",
    "node-sass": "^7.0.0",
    "sass-loader": "^7.1.0",
    "ts-jest": "^24.0.2",
    "vue-jest": "^3.0.5"
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.2.4",
    "@nuxtjs/axios": "^5.5.4",
    "@nuxtjs/dotenv": "^1.4.1",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/vue": "^5.2.8",
    "@vue/test-utils": "^1.0.0-beta.31",
    "axios-auth-refresh": "^2.2.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-vue": "2.0.2",
    "chart.js": "^2.9.3",
    "core-js": "2.6.9",
    "element-ui": "^2.9.2",
    "moment": "^2.24.0",
    "nuxt": "2.9.2",
    "nuxt-webfontloader": "^1.1.0",
    "vue-chartjs": "^3.5.0",
    "vue-i18n": "^8.8.2",
    "vue-property-decorator": "^8.2.1",
    "vuex-class-component": "^2.2.1"
  },
  "resolutions": {
    "d3-selection": "1.3.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/client/$1",
      "^~/(.*)$": "<rootDir>/client/$1",
      "^vue$": "vue/dist/vue.common.js",
      "^.+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "**/client/pages/**",
      "**/client/store/**",
      "**/client/utils/**"
    ]
  }
}
